<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:layout_marginLeft="0dp"
    android:background="@drawable/b"
    android:orientation="vertical"
    android:padding="4dp"
    android:paddingBottom="2dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/projTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:shadowColor="#00A0cc"
        android:text="@string/ProjTitle"
        android:textColor="#00A0FF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/transceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <Button
            android:id="@+id/testingofBTafterExam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:visibility="gone" />

        <TextView
            android:id="@+id/developer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/beautiful_red"
            android:gravity="center"
            android:shadowColor="#00A0cc"
            android:text="Umah Chukwudi MOUAU/12/21836"
            android:textColor="#fafafa"
            android:textSize="20sp"
            android:textStyle="bold" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#502E2E2E"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/middleLayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#000000" >

            <ImageButton
                android:id="@+id/ConnectButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rect_connect"
                android:contentDescription="@string/start"
                android:padding="5dp"
                android:src="@drawable/img" />

            <ImageButton
                android:id="@+id/realTime_logging"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp"
                android:background="@drawable/rect_str_data"
                android:src="@drawable/img1" />

            <ImageButton
                android:id="@+id/storeDataB"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rect_store"
                android:padding="5dp"
                android:src="@drawable/img2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imgTitleLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/uControllertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/start"
                android:textColor="#0085FF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/streamTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/stream"
                android:textColor="#0085FF"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/storeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/store"
                android:textColor="#0085FF"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/beautiful_red"
            android:fadingEdge="horizontal"
            android:gravity="bottom|left"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="5dp"
            android:text="Project Supervisor: Engr. Henrietta Udeani"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <LinearLayout
            android:id="@+id/bottomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="#33009CA9" >

                <TextView
                    android:id="@+id/BTSurpport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Bluetooth Support:"
                    android:textColor="#E4E4E4"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/BTSBool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:textColor="#2A941E"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33009CA9" >

                <TextView
                    android:id="@+id/BT_ON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:text="Bluetooth Enabled:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#E4E4E4" />

                <TextView
                    android:id="@+id/BT_ON_Bool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FF3B5D"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <ToggleButton
                    android:id="@+id/BT_Enabled_toggleB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ToggleButton" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contForbondedList"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#771E1E1E"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>