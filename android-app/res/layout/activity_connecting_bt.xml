<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConnectingBT" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Connecting to..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00A0FF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="#c2000000"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/conBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ic_connectingIMG"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_coonecting1" />

            <LinearLayout
                android:id="@+id/conBTLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/devName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Device Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#8800A0FF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/devMAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:text="MAC Address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#7702EA11"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/connectProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" />

        <ImageView
            android:id="@+id/bt_devices_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@null"
            android:src="@null" />

    </LinearLayout>

</LinearLayout>